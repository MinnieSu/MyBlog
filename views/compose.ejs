<%- include('partials/header'); -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="mb-3">
            <label for="postTitle" class="form-label">Title</label> <br>
            <input type="text" class="form-control" name="postTitle"> <br>
        </div>
        <div class="mb-3">
            <label for="postBody">Post</label> <br>
            <textarea class="form-control" name="postBody" rows="3"></textarea> <br>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
    </form>


    <%- include('partials/footer'); -%>